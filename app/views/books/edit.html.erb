<!DOCTYPE html>
<html>
  <head>
    
  </head>
  
  <body>

    <h1>Editing Book</h1>

    <%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
  
      <h4>Title</h4>
      <%= f.text_field :title %>
  
      <h4>Body</h4>
      <%= f.text_area :body %>
  
      <p><%= f.submit 'Update Book' %></p>
  
    <% end %>

    <a class="back" href="/books">Back</a>
  </body>
</html>