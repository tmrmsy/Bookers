<!DOCTYPE html>
<html>
  <head>
    
  </head>
  
  <body>

    <h1>Editing Book</h1>
    
    <% if @book.errors.any? %>
    <div class="error_massage">
      <%= @book.errors.count %> errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>

    <%= form_with model: @book, local:true do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="action">
      <div><%= f.submit 'Update Book' %></div>
    </div>
    <% end %>

    <%= link_to "Show", book_path(@book.id) %> | 
    <%= link_to "Back", '/books' %>
  </body>
</html>